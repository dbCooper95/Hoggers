<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bhutanidhruv16.explist.AddOrder">

    <Button
        android:id="@+id/add_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/blue_d_grey"
        android:text="Add New Order"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/PrimaryBackground"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/lv_addorder"
        style="@android:style/Widget.DeviceDefault.Light.ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/club_order_button"
        android:layout_below="@+id/add_order_button"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:divider="#ef686262"
        android:dividerHeight="1.5dp"></ListView>

    <Button
        android:id="@+id/club_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@color/blue_d_grey"
        android:text="Club Orders"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/PrimaryBackground"
        android:textSize="20dp" />

</RelativeLayout>
