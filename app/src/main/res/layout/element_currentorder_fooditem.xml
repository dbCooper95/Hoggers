<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/current_order_fooditem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/addon"
        android:layout_weight="0.37"
        android:paddingLeft="10dp"
        android:text="FoodItem"
        android:textColor="@color/black_d_material"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/addon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/current_order_fooditem_qty"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/current_order_fooditem_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/checkbox_itemdelivered"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black_d_material"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/checkbox_itemdelivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>